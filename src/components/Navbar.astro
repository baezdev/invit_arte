<script>
  export const showMenu = () => {
    const buttonMenu = document.querySelector(".button__menu");
    const navbarMenu = document.querySelector(".navbar__menu");
    const x = `<i class="fa-solid fa-x"></i>`;
    const menu = `<i class="fa-solid fa-bars-staggered"></i>`;

    buttonMenu.addEventListener("click", () => {
      navbarMenu.classList.toggle("showMenu");
      if (navbarMenu.classList.contains("showMenu")) {
        buttonMenu.innerHTML = x;
      } else {
        buttonMenu.innerHTML = menu;
      }
    });
  };

  export const generateLinks = () => {
    const navbarMenuContainer = document.querySelector(
      ".navbar__menu-container"
    );
    const links = [
      {
        text: "acceder",
        url: "/login/",
      },
      {
        text: "contacto",
        url: "/contact/",
      },
      {
        text: "sobre nosotros",
        url: "/about/",
      },
      {
        text: "servicios",
        url: "/services/",
      },
      {
        text: "diseÃ±os",
        url: "/designs/",
      },
      {
        text: "inicio",
        url: "/",
      },
    ];

    links.map(({ text, url }) => {
      const li = document.createElement("li");
      const a = document.createElement("a");
      a.href = url;
      a.textContent = text;
      li.appendChild(a);
      navbarMenuContainer.appendChild(li);
    });
  };

  generateLinks();
  showMenu();
</script>
